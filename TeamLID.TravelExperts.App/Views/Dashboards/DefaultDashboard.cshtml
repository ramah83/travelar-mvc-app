@model TeamLID.TravelExperts.App.Models.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    window.onload = function () {
        const bookingDestCtx = document.getElementById('bookingDestChart');
        if (bookingDestCtx) {
               new Chart(bookingDestCtx, {
        type: 'doughnut',
        data: {
            labels: @Html.Raw(Json.Serialize(Model.BookingsByDestination.Keys)),
            datasets: [{
                data: @Html.Raw(Json.Serialize(Model.BookingsByDestination.Values)),
                backgroundColor: ['#ff6384', '#36a2eb', '#ffce56', '#4bc0c0', '#9966ff']
            }]
        },
        options: {
            plugins: {
                legend: {
                    labels: {
                        color: 'white',   
                        font: {
                            size: 16    
                        }
                    }
                }
            }
        }
    });

        }

        const newCustCtx = document.getElementById('newCustomersChart');
        if (newCustCtx) {
               new Chart(newCustCtx, {
        type: 'line',
        data: {
            labels: @Html.Raw(Json.Serialize(Model.Months)),
            datasets: [{
                label: 'New Customers',
                data: @Html.Raw(Json.Serialize(Model.NewCustomersPerMonth)),
                borderColor: '#00ffc3',
                fill: false
            }]
        },
        options: {
            plugins: {
                legend: {
                    labels: {
                        color: 'white',
                        font: {
                            size: 16
                        }
                    }
                }
            },
            scales: {
                x: {
                    ticks: {
                        color: 'white',
                        font: {
                            size: 14
                        }
                    }
                },
                y: {
                    ticks: {
                        color: 'white',
                        font: {
                            size: 14
                        }
                    }
                }
            }
        }
    });

        }
    };
</script>
<style>
    body {
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        font-family: 'Segoe UI', sans-serif;
        font-size: 19px;
        line-height: 1.9;
        color: white;
    }

        body::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('/images/des.png');
            background-size: cover;
            background-position: center;
            z-index: -1;
            opacity: 1;
        }

    .register-box {
        background: rgba(0, 54, 102, 0.85);
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 0 30px rgba(0, 255, 255, 0.2);
        color: white;
        margin: 40px auto;
    }

    .card-custom {
        background-color: rgba(0, 0, 0, 0.3);
        color: white;
        border: 1px solid #00ffc3;
        border-radius: 12px;
        box-shadow: 0 0 15px rgba(0, 255, 255, 0.2);
        transition: transform 0.3s ease;
    }

        .card-custom:hover {
            transform: scale(1.03);
            background-color: rgba(0, 102, 153, 0.8);
        }

    .card-title {
        color: #00ffc3;
    }

    canvas {
        background-color: rgba(255, 255, 255, 0.1);
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 255, 255, 0.3);
        margin-top: 20px;
        padding: 10px;
    }
</style>

<div class="container mt-5">
    <div class="register-box">
        <h1 class="text-center display-4 mb-4">Admin Dashboard</h1>
        <div class="row text-center">
            <div class="col-md-6 col-lg-3 mb-4">
                <div class="card card-custom">
                    <div class="card-body">
                        <h5 class="card-title">Customers</h5>
                        <h2>@Model.TotalCustomers</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3 mb-4">
                <div class="card card-custom">
                    <div class="card-body">
                        <h5 class="card-title">Bookings</h5>
                        <h2>@Model.TotalBookings</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3 mb-4">
                <div class="card card-custom">
                    <div class="card-body">
                        <h5 class="card-title">Packages</h5>
                        <h2>@Model.TotalPackages</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3 mb-4">
                <div class="card card-custom">
                    <div class="card-body">
                        <h5 class="card-title">Agents</h5>
                        <h2>@Model.TotalAgents</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <canvas id="bookingDestChart" width="400" height="400"></canvas>
        </div>
        <div class="col-md-6">
            <canvas id="newCustomersChart" width="400" height="400"></canvas>
        </div>
    </div>
</div>