@model TeamLID.TravelExperts.Repository.Domain.Customers

@{
    ViewData["Title"] = "Delete Customer";
}

<style>
    body {
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        font-family: 'Segoe UI', sans-serif;
        font-size: 18px;
        color: white;
    }

        body::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('/images/cus.png');
            background-size: cover;
            background-position: center;
            opacity: 1;
            z-index: -1;
        }

    .delete-container {
        background: rgba(0, 54, 102, 0.85);
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 0 30px rgba(0, 255, 255, 0.2);
        margin-top: 50px;
        margin-bottom: 50px;
    }

    h1, h4 {
        color: #ffffff;
        text-shadow: 1px 1px 3px #00e6e6;
        text-align: center;
    }

    dt {
        color: #aad8ff;
        font-weight: 600;
    }

    dd {
        color: #e0f7fa;
    }

    hr {
        border-top: 2px solid #00ffc3;
    }

    .btn-danger {
        font-weight: bold;
        padding: 8px 20px;
        margin-right: 10px;
    }

    .btn-back {
        font-weight: bold;
        color: #00ffc3;
        text-decoration: none;
    }

        .btn-back:hover {
            text-decoration: underline;
            color: #ffffff;
        }

    .form-actions {
        text-align: center;
        margin-top: 30px;
    }
</style>

<div class="container">
    <div class="delete-container">
        <h1>Delete Customer</h1>
        <h4>Are you sure you want to delete this?</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CustFirstName)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CustFirstName)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CustLastName)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CustLastName)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CustEmail)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CustEmail)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CustCity)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CustCity)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CustCountry)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CustCountry)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Username)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Username)</dd>
        </dl>

        <div class="form-actions">
            <form asp-action="Delete">
                <input type="hidden" asp-for="CustomerId" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn-back">← Back to List</a>
            </form>
        </div>
    </div>
</div>
