@{
    ViewData["Title"] = "Forgot Password";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />

<style>
    body {
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        font-family: 'Segoe UI', sans-serif;
        font-size: 19px;
        color: white;
    }

        body::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('/images/LOGIN.png'); /* نفس الخلفية بتاعت Login */
            background-size: cover;
            background-position: center;
            z-index: -1;
            opacity: 1;
        }

    .reset-box {
        background: rgba(0, 54, 102, 0.85);
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 0 30px rgba(0, 255, 255, 0.2);
        color: white;
        margin: 40px auto;
        max-width: 500px;
    }

    .form-control {
        background-color: rgba(255, 255, 255, 0.05);
        color: white;
        border: 1px solid #00bcd4;
    }

        .form-control::placeholder {
            color: #aad8ff;
        }

        .form-control:focus {
            border-color: #00e6e6;
            background-color: rgba(255, 255, 255, 0.08);
            box-shadow: none;
        }

    .btn-primary {
        border-color: #00bcd4;
        background-color: #00bcd4;
        color: #003c3c;
        font-weight: bold;
    }

    .btn-outline-success {
        border-color: #00ffc3;
        color: #00ffc3;
        font-weight: bold;
    }

        .btn-outline-success:hover {
            background-color: #00ffc3;
            color: #003c3c;
        }

    h2 {
        color: #ffffff;
        text-shadow: 1px 1px 3px #00e6e6;
        text-align: center;
        margin-bottom: 25px;
    }

    .alert {
        font-size: 16px;
    }

    .mt-3 a {
        font-weight: bold;
    }
</style>

<main>
    <div class="container">
        <div class="reset-box">
            <h2>Forgot your password?</h2>

            @if (ViewBag.msg != null)
            {
                <div class="alert alert-danger">@ViewBag.msg</div>
            }

            @if (ViewBag.success != null)
            {
                <div class="alert alert-success">@ViewBag.success</div>
            }

            @if (ViewBag.ResetUrl != null)
            {
                <div class="mt-3 text-center">
                    <a href="@ViewBag.ResetUrl" class="btn btn-outline-success">Go to Reset Page</a>
                </div>
            }

            <form asp-action="SendResetPasswordUrl" method="post" class="mt-4">
                <div class="form-group">
                    <label>Email address</label>
                    <input type="email" name="email" class="form-control" placeholder="you@example.com" required />
                </div>
                <button type="submit" class="btn btn-primary btn-block">Send Reset Link</button>
            </form>

            <div class="mt-3 text-center">
                <a asp-action="Login" asp-controller="Customers" style="color:#00e6e6;">Back to Login</a>
            </div>
        </div>
    </div>
</main>
