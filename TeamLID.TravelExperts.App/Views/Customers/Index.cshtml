@model IEnumerable<TeamLID.TravelExperts.Repository.Domain.Customers>

@{
    ViewData["Title"] = "Manage Customers";
}

<header class="container-header">
    <div class="jumbotron jumbotron-fluid jumbotron-packages">
        <div class="container">
            <h1 class="display-4 contact-greetings h1-responsive">Manage Customers</h1>
            <hr class="my-4">
        </div>
    </div>
</header>

<style>
    body {
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        font-family: 'Segoe UI', sans-serif;
        font-size: 19px;
        color: white;
    }

        body::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('/images/cus.png');
            background-size: cover;
            background-position: center;
            z-index: -1;
            opacity: 1;
        }

    .jumbotron-packages {
        background: transparent;
        text-align: center;
        margin-bottom: 0;
    }

    .contact-greetings {
        color: #ffffff;
        text-shadow: 1px 1px 3px #00e6e6;
    }

    .agent-box {
        background: rgba(0, 54, 102, 0.85);
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 0 30px rgba(0, 255, 255, 0.2);
        color: white;
        margin: 40px auto;
    }

    .agent-contacts {
        color: #aad8ff;
        font-weight: bold;
    }

    table.table {
        background-color: rgba(0, 0, 0, 0.6);
        color: white;
        border-radius: 12px;
        overflow: hidden;
    }

    table thead th {
        background-color: rgba(0, 54, 102, 0.95);
        color: #00ffc3;
    }

    table tbody tr {
        background-color: rgba(0, 0, 0, 0.4);
        transition: all 0.3s ease;
    }

        table tbody tr:hover {
            transform: scale(1.02);
            background-color: rgba(0, 102, 153, 0.8);
            color: #ffffff;
            z-index: 5;
            position: relative;
        }

            table tbody tr:hover td {
                font-size: 1.05em;
                font-weight: 500;
                color: #ffffff;
            }

    .btn-outline-success {
        border-color: #00ffc3;
        color: #00ffc3;
        font-weight: bold;
    }

        .btn-outline-success:hover {
            background-color: #00ffc3;
            color: #003c3c;
        }

    .btn-action {
        margin: 5px;
    }

    .table-container {
        overflow-x: auto;
        width: 100%;
    }

    .agent-box {
        overflow-x: hidden;
        padding: 40px;
        border-radius: 12px;
        background: rgba(0, 54, 102, 0.85);
        box-shadow: 0 0 30px rgba(0, 255, 255, 0.2);
        margin: 40px auto;
        max-width: 100%;
    }

</style>

<main>
    <div class="container">
        <div class="contact-main">
            <div class="agent-box">
                <h2 class="agent-contacts">All Customers</h2>
                <p class="description lead fw-100">Manage registered customers in the system.</p>
                <br>

                <div class="text-center mb-3">
                    <a asp-action="Create" class="btn btn-outline-success">+ Create New Customer</a>
                </div>

                <div class="table-container">
                    <div class="table-responsive-lg">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.First().CustFirstName)</th>
                                    <th>@Html.DisplayNameFor(model => model.First().CustLastName)</th>
                                    <th>@Html.DisplayNameFor(model => model.First().CustEmail)</th>
                                    <th>@Html.DisplayNameFor(model => model.First().CustCity)</th>
                                    <th>@Html.DisplayNameFor(model => model.First().CustCountry)</th>
                                    <th>Username</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.CustFirstName</td>
                                        <td>@item.CustLastName</td>
                                        <td>@item.CustEmail</td>
                                        <td>@item.CustCity</td>
                                        <td>@item.CustCountry</td>
                                        <td>@item.Username</td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.CustomerId" class="btn btn-outline-warning btn-sm btn-action">Edit</a>
                                            <a asp-action="Details" asp-route-id="@item.CustomerId" class="btn btn-outline-info btn-sm btn-action">Details</a>
                                            <a asp-action="Delete" asp-route-id="@item.CustomerId" class="btn btn-outline-danger btn-sm btn-action">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
