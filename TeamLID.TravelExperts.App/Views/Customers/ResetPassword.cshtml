@model lf_egypt.App.Models.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />

<style>
    body {
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        font-family: 'Segoe UI', sans-serif;
        font-size: 19px;
        color: white;
    }

        body::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('/images/LOGIN.png'); /* Use the same image as login */
            background-size: cover;
            background-position: center;
            z-index: -1;
            opacity: 1;
        }

    .reset-box {
        background: rgba(0, 54, 102, 0.85);
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 0 30px rgba(0, 255, 255, 0.2);
        margin: 50px auto;
        max-width: 500px;
    }

    .form-control {
        background-color: rgba(255, 255, 255, 0.05);
        color: white;
        border: 1px solid #00bcd4;
    }

        .form-control::placeholder {
            color: #aad8ff;
        }

        .form-control:focus {
            border-color: #00e6e6;
            background-color: rgba(255, 255, 255, 0.08);
            box-shadow: none;
        }

    .btn-success {
        background-color: #00ffc3;
        color: #003c3c;
        font-weight: bold;
        border: none;
    }

        .btn-success:hover {
            background-color: #00e6e6;
            color: #002929;
        }

    h2 {
        text-align: center;
        margin-bottom: 25px;
        color: #ffffff;
        text-shadow: 1px 1px 3px #00e6e6;
    }
</style>

<div class="container">
    <div class="reset-box">

        <h2>Reset Your Password</h2>

        @if (ViewBag.msg != null)
        {
            <div class="alert alert-danger">@ViewBag.msg</div>
        }
        @if (ViewBag.success != null)
        {
            <div class="alert alert-success">@ViewBag.success</div>
        }

        <form asp-action="ResetPassword" method="post">

            <input type="hidden" asp-for="Email" />
            <input type="hidden" asp-for="Token" />

            <div class="form-group">
                <label asp-for="NewPassword"></label>
                <input asp-for="NewPassword" class="form-control" placeholder="Enter new password" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm new password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success btn-block">Reset Password</button>

            <div class="mt-3 text-center">
                <a asp-action="Login" asp-controller="Customers" style="color:#00e6e6;">Back to Login</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
