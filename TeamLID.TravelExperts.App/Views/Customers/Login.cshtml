@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />

<div class="jumbotron jumbotron-fluid jumbotron-login">
    <div class="container">
        <h1 class="display-4 register-greetings h1-responsive">Login</h1>
        <hr class="my-4">
        <p class="lead register-heading">Welcome to Egypt Travel Experts, Login to continue</p>
    </div>
</div>

<style>
    body {
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        font-family: 'Segoe UI', sans-serif;
        font-size: 19px;
        line-height: 1.9;
        color: white;
    }

        body::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('/images/LOGIN.png');
            background-size: cover;
            background-position: center;
            z-index: -1;
            opacity: 1;
        }

    .register-box {
        background: rgba(0, 54, 102, 0.85);
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 0 30px rgba(0, 255, 255, 0.2);
        color: white;
        margin: 40px auto;
    }

    .form-control {
        background-color: rgba(255, 255, 255, 0.05);
        color: white;
        border: 1px solid #00bcd4;
        border-left: none;
    }

        .form-control::placeholder {
            color: #aad8ff;
        }

        .form-control:focus {
            border-color: #00e6e6;
            box-shadow: none;
            background-color: rgba(255, 255, 255, 0.08);
        }

    .btn-outline-primary {
        border-color: #00bcd4;
        color: #00bcd4;
        font-weight: bold;
    }

        .btn-outline-primary:hover {
            background-color: #00bcd4;
            color: #003c3c;
        }

    .register-greetings {
        color: #ffffff;
        text-shadow: 1px 1px 3px #00e6e6;
    }

    .register-heading {
        color: #aad8ff;
    }

    .jumbotron-login {
        background: transparent;
        text-align: center;
        margin-bottom: 0;
    }

    .alert-danger {
        background-color: rgba(255, 0, 0, 0.1);
        border-color: #ff5c5c;
        color: #ffb3b3;
    }

    .alert-success {
        background-color: rgba(0, 255, 0, 0.1);
        border-color: #5cff9d;
        color: #b3ffdb;
    }

    .input-group-text {
        border-color: #00bcd4;
        background-color: rgba(0, 0, 0, 0.2);
        color: #00e6e6;
        border-right: none;
    }
</style>

<main>
    <div class="container">
        <div class="register-main">
            <div class="register-box">
                <div class="row">
                    <div class='col-md-8 offset-md-2'>

                        <form asp-action="Login" asp-controller="Customers" class="form-signin text-center">

                            @if (ViewBag.msg != null)
                            {
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    @ViewBag.msg
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                            }

                            @if (ViewBag.success != null)
                            {
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                    @ViewBag.success
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                            }

                            <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="fas fa-user"></i>
                                        </span>
                                    </div>
                                    <input type="text" asp-for="username" class="form-control" placeholder="Username" required autofocus />
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="fas fa-lock"></i>
                                        </span>
                                    </div>
                                    <input type="password" asp-for="password" class="form-control" placeholder="Password" required />
                                </div>
                            </div>

                            <div>
                                <p>
                                    Don't have an account?
                                    <a asp-controller="Customers" asp-action="Register" style="color: #00ff99; font-weight: 500;">
                                        Register
                                    </a>
                                </p>
                            </div>
                            <div class="mt-3">
                                <p>
                                    Forgot your password?
                                    <a asp-controller="Customers" asp-action="ForgetPassword" style="color: #00e6e6; font-weight: 500;">
                                        Reset it here
                                    </a>
                                </p>
                            </div> 
                            <button class="btn btn btn-outline-primary btn-block" type="submit">Log In</button>

                          

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
