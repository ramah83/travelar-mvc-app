@model TeamLID.TravelExperts.Repository.Domain.Packages

@{
    ViewData["Title"] = "Details";
}

<style>
    body {
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        font-family: 'Segoe UI', sans-serif;
        font-size: 18px;
        color: white;
    }

        body::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('/images/pak.png');
            background-size: cover;
            background-position: center;
            opacity: 1;
            z-index: -1;
        }

    .form-container {
        background: rgba(0, 54, 102, 0.85);
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 0 30px rgba(0, 255, 255, 0.2);
        margin-top: 50px;
        margin-bottom: 50px;
    }

    .form-group label {
        color: #aad8ff;
        font-weight: 600;
    }

    .form-control-plaintext {
        background-color: rgba(255, 255, 255, 0.1);
        border: none;
        color: #e0f7fa;
        font-weight: bold;
    }

    .btn-primary {
        background-color: #00ffc3;
        border-color: #00ffc3;
        font-weight: bold;
        color: #003c3c;
    }

        .btn-primary:hover {
            background-color: #00e6e6;
            border-color: #00e6e6;
            color: #002222;
        }

    .btn-back {
        color: #00ffc3;
        font-weight: bold;
        text-decoration: none;
    }

        .btn-back:hover {
            text-decoration: underline;
            color: #ffffff;
        }

    h1, h4 {
        color: #ffffff;
        text-shadow: 1px 1px 3px #00e6e6;
        text-align: center;
    }

    hr {
        border-top: 2px solid #00ffc3;
    }
</style>

<div class="container">
    <div class="form-container">
        <h1>Details</h1>
        <h4>Package</h4>
        <hr />

        <div class="form-group">
            <label>Package Name</label>
            <input class="form-control-plaintext" value="@Model.PkgName" readonly />
        </div>

        <div class="form-group">
            <label>Start Date</label>
            <input class="form-control-plaintext" value="@Model.PkgStartDate?.ToString("yyyy-MM-dd")" readonly />
        </div>

        <div class="form-group">
            <label>End Date</label>
            <input class="form-control-plaintext" value="@Model.PkgEndDate?.ToString("yyyy-MM-dd")" readonly />
        </div>

        <div class="form-group">
            <label>Description</label>
            <input class="form-control-plaintext" value="@Model.PkgDesc" readonly />
        </div>

        <div class="form-group">
            <label>Base Price</label>
            <input class="form-control-plaintext" value="@Model.PkgBasePrice" readonly />
        </div>

        <div class="form-group">
            <label>Agency Commission</label>
            <input class="form-control-plaintext" value="@Model.PkgAgencyCommission" readonly />
        </div>

        <div class="text-center mt-4">
            <a asp-action="Edit" asp-route-id="@Model.PackageId" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn-back ml-4">? Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
