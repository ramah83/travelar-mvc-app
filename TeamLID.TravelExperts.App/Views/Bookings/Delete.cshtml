@model TeamLID.TravelExperts.Repository.Domain.Bookings

@{
    ViewData["Title"] = "Delete";
}

<style>
    body {
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        font-family: 'Segoe UI', sans-serif;
        font-size: 18px;
        color: white;
    }

        body::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('/images/book.png');
            background-size: cover;
            background-position: center;
            opacity: 1;
            z-index: -1;
        }

    .form-container {
        background: rgba(0, 54, 102, 0.85);
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 0 30px rgba(0, 255, 255, 0.2);
        margin-top: 50px;
        margin-bottom: 50px;
    }

    h1, h3, h4 {
        color: #ffffff;
        text-shadow: 1px 1px 3px #00e6e6;
        text-align: center;
    }

    dt {
        color: #aad8ff;
        font-weight: 600;
    }

    dd {
        color: #e0f7fa;
    }

    hr {
        border-top: 2px solid #00ffc3;
    }

    .btn-danger {
        background-color: #ff4d4d;
        border-color: #ff4d4d;
        font-weight: bold;
    }

        .btn-danger:hover {
            background-color: #ff1a1a;
            border-color: #ff1a1a;
        }

    .btn-back {
        color: #00ffc3;
        font-weight: bold;
        text-decoration: none;
        margin-left: 10px;
    }

        .btn-back:hover {
            text-decoration: underline;
            color: #ffffff;
        }
</style>

<div class="container">
    <div class="form-container">
        <h1>Delete</h1>
        <h3>Are you sure you want to delete this?</h3>
        <h4>Booking Details</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.BookingDate)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.BookingDate)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.BookingNo)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.BookingNo)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.TravelerCount)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.TravelerCount)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Customer)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Customer.CustAddress)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Package)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Package.PkgName)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.TripType)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.TripType.TripTypeId)</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="BookingId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn-back">? Back to List</a>
        </form>
    </div>
</div>
