@model TeamLID.TravelExperts.Repository.Domain.Agents

@{
    ViewData["Title"] = "Create";
}

<style>
    body {
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        font-family: 'Segoe UI', sans-serif;
        font-size: 18px;
        color: white;
    }

        body::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('/images/pak.png');
            background-size: cover;
            background-position: center;
            opacity: 1;
            z-index: -1;
        }

    .form-container {
        background: rgba(0, 54, 102, 0.85);
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 0 25px rgba(0, 255, 255, 0.2);
        margin: 50px auto;
        max-width: 600px;
    }

    h1, h4 {
        color: #ffffff;
        text-shadow: 1px 1px 3px #00e6e6;
        text-align: center;
    }

    .form-group label {
        color: #aad8ff;
        font-weight: bold;
    }

    .form-control {
        background-color: rgba(255, 255, 255, 0.95);
        border: none;
        border-radius: 6px;
        color: #003c3c;
    }

    .text-danger {
        color: #ffaaaa !important;
    }

    .btn-primary {
        background-color: #00ffc3;
        border-color: #00ffc3;
        color: #003c3c;
        font-weight: bold;
    }

        .btn-primary:hover {
            background-color: #00e6e6;
            color: #002222;
        }

    .back-link {
        display: block;
        margin-top: 20px;
        text-align: center;
    }

        .back-link a {
            color: #00ffc3;
            font-weight: bold;
            text-decoration: none;
        }

            .back-link a:hover {
                text-decoration: underline;
                color: #ffffff;
            }
</style>

<div class="container">
    <div class="form-container">
        <h1>Create</h1>
        <h4>Agent</h4>
        <hr />

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="AgtFirstName" class="control-label"></label>
                <input asp-for="AgtFirstName" class="form-control" />
                <span asp-validation-for="AgtFirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AgtMiddleInitial" class="control-label"></label>
                <input asp-for="AgtMiddleInitial" class="form-control" />
                <span asp-validation-for="AgtMiddleInitial" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AgtLastName" class="control-label"></label>
                <input asp-for="AgtLastName" class="form-control" />
                <span asp-validation-for="AgtLastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AgtBusPhone" class="control-label"></label>
                <input asp-for="AgtBusPhone" class="form-control" />
                <span asp-validation-for="AgtBusPhone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AgtEmail" class="control-label"></label>
                <input asp-for="AgtEmail" class="form-control" />
                <span asp-validation-for="AgtEmail" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AgtPosition" class="control-label"></label>
                <input asp-for="AgtPosition" class="form-control" />
                <span asp-validation-for="AgtPosition" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AgencyId" class="control-label"></label>
                <select asp-for="AgencyId" class="form-control" asp-items="ViewBag.AgencyId"></select>
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>

        <div class="back-link">
            <a asp-action="Index">← Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
